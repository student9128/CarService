    <LinearLayout style="@style/DetailItemStyle">

        <TextView
            style="@style/DetailKeyStyle"
            android:text="服务专员：" />

        <TextView
            android:id="@+id/tv_service_specialist"
            style="@style/DetailValueStyle"
            android:text="小刘" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout style="@style/DetailItemStyle">

        <TextView
            style="@style/DetailKeyStyle"
            android:text="日期：" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/DetailValueStyle"
            android:text="2018-01-10"
            android:textColor="@color/gray" />
