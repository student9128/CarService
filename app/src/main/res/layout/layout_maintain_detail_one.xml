        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout style="@style/DetailItemStyle">

        <TextView
            style="@style/DetailKeyStyle"
            android:text="电话：" />

        <TextView
            android:id="@+id/tv_phone_number"
            style="@style/DetailValueStyle"
